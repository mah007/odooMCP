        },
        {
            "name": "Tools - Record Operations",
            "item": [
                {
                    "name": "Search Records",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": \"{{$guid}}\",\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"search_records\",\n    \"arguments\": {\n      \"model\": \"{{default_model}}\",\n      \"domain\": [[\"name\", \"ilike\", \"Sample\"]],\n      \"fields\": [\"id\", \"name\"],\n      \"limit\": 5,\n      \"offset\": 0,\n      \"order\": \"name asc\"\n    }\n  }\n}"
                        },
                        "url": "{{base_url}}/mcp"
                    },
                    "response": []
                },
                {
                    "name": "Search Count",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": \"{{$guid}}\",\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"search_count\",\n    \"arguments\": {\n      \"model\": \"{{default_model}}\",\n      \"domain\": [[\"active\", \"=\", true]]\n    }\n  }\n}"
                        },
                        "url": "{{base_url}}/mcp"
                    },
                    "response": []
                },
                {
                    "name": "Get Record",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": \"{{$guid}}\",\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"get_record\",\n    \"arguments\": {\n      \"model\": \"{{default_model}}\",\n      \"ids\": [1],\n      \"fields\": [\"id\", \"name\", \"email\"]\n    }\n  }\n}"
                        },
                        "url": "{{base_url}}/mcp"
                    },
                    "response": []
                },
                {
                    "name": "Create Record",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
