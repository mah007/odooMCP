{
    "info": {
        "_postman_id": "00000000-0000-0000-0000-000000000000",
        "name": "Odoo MCP Server",
        "description": "Comprehensive Postman collection to exercise the Odoo MCP HTTP server, covering JSON-RPC protocol calls, discovery endpoints, and every available tool exposed by the server layer.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string",
            "description": "Root URL where the MCP HTTP server is listening."
        },
        {
            "key": "mcp_api_key",
            "value": "changeme",
            "type": "string",
            "description": "MCP server API key configured via MCP_API_KEY."
        },
        {
            "key": "default_model",
            "value": "res.partner",
            "type": "string",
            "description": "Default Odoo model used in sample tool calls."
        }
    ],
    "auth": {
        "type": "apikey",
        "apikey": [
            {
                "key": "value",
                "value": "{{mcp_api_key}}",
                "type": "string"
            },
            {
                "key": "key",
                "value": "X-API-Key",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "Server Meta",
            "item": [
                {
                    "name": "Root (GET)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{base_url}}/"
                    },
                    "response": []
                },
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{base_url}}/health"
                    },
                    "response": []
                }
            ]
